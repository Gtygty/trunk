<!-- 详情编辑页面（达人添加动态） -->
<div class="modal fade bs-example-modal-lg" id="viewDynamicsDetail" tabindex="-1" role="dialog" style="overflow-y:auto;">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<span class="banner-close pull-right" id="addBannerColse" data-dismiss="modal" ng-click="vm.DoctorAuth.OnhideDynamics()" >关闭</span>
				<h4 class="modal-title" id="myModalLabel">添加动态</h4>
			</div>
			<div class="modal-body banner-model">
				<form class="form-horizontal" role="form">
                    <div class="Dynamics">
                        <div class="form-group">
                            <div class="Dynamics_top_left">
                                <img ng-src="{{vm.DoctorAuth.CurrentDynamics.VerifyImageUrl}}" class="Dynamics_img">
                                <div class="Dynamics_talent">
                                    <p class="Dynamics_talent_name" 
                                       ng-bind="vm.DoctorAuth.CurrentDynamics.NickName"></p>
                                    <p class="Dynamics_talent_desc"
                                       ng-bind="vm.DoctorAuth.CurrentDynamics.Desc"></p>
                                </div>
                            </div>
                            <div class="Dynamics_top_right">
                                <p>共<span ng-bind="vm.DoctorAuth.CurrentDynamics.count"></span>条动态</p>
                                <button class="btn btn-primary" ng-click="vm.DoctorAuth.OnshowDynamics()" >发动态</button>
                            </div>
                        </div>
                        <div id="sendDynamics"  style="display:none;">
                            <div class="form-group">
                                <div class="Dynamics_center">
                                    <div class="Dynamics_center_one">
                                        <input type="text" placeholder="请输入标题  选填" ng-model="vm.DoctorAuth.CurrentDynamics.Title">
                                        <div class="hr"></div>
                                        <textarea  ng-model="vm.DoctorAuth.CurrentDynamics.Content" cols="30" rows="13" 
                                                   ng-change="vm.DoctorAuth.OnchangeContent()"
                                                   placeholder="在这里输入内容，最少10个字"></textarea>
                                        <p class="content-length">
                                            <span>还可以输入</span>
                                            <span ng-bind="vm.DoctorAuth.ContentLength" style="color:#5BC0DE;" ng-if="vm.DoctorAuth.ContentLength>0">2000</span>
                                            <span ng-bind="vm.DoctorAuth.ContentLength" style="color:red;" ng-if="vm.DoctorAuth.ContentLength<=0">2000</span>
                                            <span>个字</span>
                                        </p>
                                    </div>
                                    <div class="Dynamics_center_two">
                                        <span ng-class="{'Dynamics_color': item.isChosen}"  ng-repeat="item in vm.DoctorAuth.AllTags"
                                              ng-attr-title="{{item.name}}" ng-click="vm.DoctorAuth.OnchangeState(item)"> 
                                            {{item.name}}
                                        </span>
                                    </div>
                                    <div class="Dynamics_center_three">
                                        <div class="input-group input-group-sm">
                                            <input type="file" class="form-control" id="inputAddDynamicsItemSrc" placeholder="请上传图片"
                                                    ng-model="vm.activityGroup.Current.ImageUrl">
                                            <span class="input-group-btn">
                                                <button class="btn btn-info" type="button" ng-click="vm.DoctorAuth.OnUploadDynamicsImage()">
                                                <span class='glyphicon glyphicon-eject'></span>&nbsp;上传图像</button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="Dynamics_center_five">
                                        <div class="mb" style="margin-top:10px;margin-right:20px;"  ng-repeat="($index, item) in vm.DoctorAuth.CurrentDynamics.Images">
                                            <img class="form-control"  
                                                style="width:80px; height: 80px; padding-top: 10px;cursor: pointer;"
                                                ng-click="vm.DoctorAuth.OnViewImage(item)"
                                                ng-src="{{ item }}" />
                                            <div class="mb-del" ng-click="vm.DoctorAuth.OnDelImage($index,item)">删除</div>
                                        </div>
                                    </div>
                                    <div class="Dynamics_center_four">
                                        <button class="btn btn-primary"
                                                ng-click="vm.DoctorAuth.OnSaveDynamics()"
                                        >发布</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="Dynamics_detail" ng-repeat="item in vm.DoctorAuth.DynamicsList" style="margin-top:20px;">
                                <div class="Dynamics_detail_one">
                                    <div class="Dynamics_detail_left">
                                        <span>{{item.CreateTime}}</span>
                                        <span class="glyphicon glyphicon-eye-open" 
                                              style="color:green;right:150px;">
                                          <span style="padding-left:5px;">
                                              {{item.ViewCount}}
                                          </span>
                                        </span>
                                        <span class="glyphicon glyphicon-heart"
                                              style="color:red;right:210px;">
                                          <span style="padding-left:5px;">
                                              {{item.FavoriteAccountNumbers}}
                                          </span>
                                        </span>
                                        <label ng-if="!item.IsTop">
                                            <button class="btn btn-info" style="right:70px;top:0;"
                                            ng-click="vm.DoctorAuth.OnUpOrDownDynamtisDilog(item)">上头条
                                            </button>
                                        </label>
                                        <label ng-if="item.IsTop">
                                            <button class="btn btn-primary" style="right:70px;top:0;"
                                            ng-click="vm.DoctorAuth.OnUpOrDownDynamtisDilog(item)">下头条
                                            </button>
                                        </label>
                                        <button class="btn btn-danger"
                                                ng-click="vm.DoctorAuth.OnDelDynamicsDilog(item)"
                                        >删除</button>
                                    </div>
                                </div>
                                <div class="Dynamics_detail_two">
                                    <div class="Dynamics_detail_title">
                                        {{item.Title}}
                                    </div>
                                    <div class="Dynamics_detail_content">
                                        <pre style="padding:0;border:none;background-color:#fff;overflow:auto;white-space: pre-wrap;white-space: -moz-pre-wrap; white-space: -pre-wrap;white-space: -o-pre-wrap;   word-wrap: break-word;">{{item.Content}}</pre>
                                    </div>
                                    <div>
                                        <div class="mb" style="margin-top:10px;margin-right:20px;cursor: pointer;" ng-repeat="imgItem in item.Images track by $index">
                                            <img class="form-control"
                                                style="width:70px; height: 80px; padding:0px;"
                                                ng-click="vm.DoctorAuth.OnViewImage(imgItem)"
                                                ng-src="{{ imgItem }}" />
                                        </div>
                                    </div>
                                    <p class="Dynamics_detail_span">
                                        <span class="Dynamics_color"  ng-repeat="spanItem in item.Tags" ng-attr-title="{{spanItem}}" >
                                            {{spanItem}}
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
				</form>
			</div>
			<div class="modal-footer">
			</div>
		</div>
	</div>
</div>

